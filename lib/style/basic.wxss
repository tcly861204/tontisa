view,
scroll-view,
swiper,
swiper-item,
icon,
text,
progress,
button,
checkbox-group,
checkbox,
form,
input,
label,
picker,
radio-group,
radio,
slider,
switch,
action-sheet,
action-sheet-item,
action-sheet-cancel,
modal,
toast,
loading,
navigator,
audio,
image,
video,
map,
canvas {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

page {
    height: 100%;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

checkbox-group,
radio-group {
    display: block;
}

:before,
:after,
::before,
::after {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.minheight {
    min-height: 80px;
}

.full {
    width: 100%;
    height: 100%;
}

.block {
    display: block;
}
.clearfix{
    overflow:auto;
    _height:1%;
}

.autosize {
    width: auto;
    height: auto;
}

.fullwidth {
    width: 100%;
}

.fullheight {
    height: 100%;
}

.initHide {
    opacity: 0 !important;
}

.ellipse {
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.navBar{
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    height: 90rpx;
    background: #fff;
    border-top:1px solid #d8d8d8;
    display: flex;
    align-items: center;
}
.navBar .navItem{
    flex: 1;
    height: 100%;
    text-align: center;
    line-height: 90rpx;
    font-size: 24rpx;
    color:#999;
}
.navBar .active{
    color:#fff;
    background: #26a2ff;
}