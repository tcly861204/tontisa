.warp{
    width: 1250rpx;
    height: 100%;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    transition: 0.4s;
    position: relative;
}
.close{
    transform: translateX(-500rpx);
}
.open{
    transform: none;
}
.sidebar{
    width: 500rpx;
    height: 100%;
    background: #2c353c;
    z-index: 3;
}
.sidebar image{
    width: 180rpx;
    height: 180rpx;
    border-radius: 90rpx;
    display: block;
    margin: 0 auto;
}
.main{
    width: 750rpx;
    height: 100%;
    overflow: auto;
    position: relative;
}
.mask{
    width:750rpx;
    height: 100%;
    position: absolute;
    top:0;
    left: 500rpx;
    background: rgba(0, 0, 0, 0.5);
    z-index: 4;
}
.main-open{
    overflow: hidden;
}
.mask-close{
    display: none;
}



.main .header{
    width: 750rpx;
    height: 90rpx;
    background: #d81e06;
    position: fixed;
    padding: 15rpx;
}
.main .header .list{
    width: 50rpx;
    height: 50rpx;
    margin: 5rpx 0 0 5rpx;
    float: left;
}
.main .header .list image{
    display: block;
    width: 50rpx;
    height: 50rpx;
}
.main .header .search{
    width: 50rpx;
    height: 50rpx;
    background: #fff;
    float: right;
    border-radius: 50rpx;
}
.main .header .search input{
    display: none;
    font-size: 28rpx;
    height: 100%;
    flex: 1;
    line-height: 100%;
    margin-right: 20rpx;
}
.main .header .search .icon{
    width: 48rpx;
    height: 48rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.main .header .search .icon image{
    width: 40rpx;
    height: 40rpx;
    display: block;
}




.main .imageList{
    width: 750rpx;
    height: auto;
    padding:105rpx 0 0 0;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}
.main .imageList .item{
    width: 230rpx;
    height: 355rpx;
    margin: 0 0 15rpx 15rpx;
}
.main .imageList .item image{
    display: block;
    width: 100%;
    height: 100%;
}